{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "@core/*": ["./src/app/core/*"],
      "@components/*": ["./src/app/core/components/*"],
      "@helpers/*": ["./src/app/core/helpers/*"],
      "@interfaces/*": ["./src/app/core/interfaces/*"],
      "@services/*": ["./src/app/core/services/*"],
      "@views/*": ["./src/app/views/*"]
    }
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
