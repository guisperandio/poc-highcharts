{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@core/*": ["./src/app/core/*"],
      "@components/*": ["./src/app/core/components/*"],
      "@helpers/*": ["./src/app/core/helpers/*"],
      "@interfaces/*": ["./src/app/core/interfaces/*"],
      "@services/*": ["./src/app/core/services/*"],
      "@views/*": ["./src/app/views/*"]
    }
  }
}
