{
  "extends": "./tsconfig.json",
  "angularCompilerOptions": {
    "enableIvy": false
  },
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "@core/*": ["./src/app/core/*"],
      "@components/*": ["./src/app/core/components/*"],
      "@interfaces/*": ["./src/app/core/interfaces/*"],
      "@helpers/*": ["./src/app/core/helpers/*"],
      "@services/*": ["./src/app/core/services/*"],
      "@views/*": ["./src/app/views/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
