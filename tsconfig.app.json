{
  "extends": "./tsconfig.json",
  "angularCompilerOptions": {
    "enableIvy": false
  },
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "@helpers/*": ["src/helpers/*"],
      "@components/*": ["src/app/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
